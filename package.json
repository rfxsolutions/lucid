{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^18.14.5",
    "lerna": "^6.5.1",
    "typescript": "^4.9.5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rfxsolutions/lucid"
  },
  "scripts": {
    "build": "npx lerna run build",
    "tw": "npx lerna run tw",
    "lint": "npx lerna run lint",
    "test": "npx lerna run test",
    "bootstrap": "lerna exec npm install",
    "release": "npx lerna run build --scope '@rfxsolutions/lucid' && npx lerna version --no-private"
  }
}
